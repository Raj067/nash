<IfModule mod_rewrite.c>
    RewriteEngine On

    # Remove /public from the URL if someone tries to access it directly
    RewriteCond %{THE_REQUEST} \s/public/ [NC]
    RewriteRule ^public/?(.*)$ /$1 [R=301,L]

    # Route everything to public/index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Security: Block sensitive files
<FilesMatch "^(\.env|\.git|composer\.(json|lock)|artisan|server\.php)">
    Require all denied
</FilesMatch>

# Hide Laravel core directories
<IfModule mod_alias.c>
    RedirectMatch 404 ^/(app|bootstrap|config|database|resources|routes|storage|tests|vendor)(/.*)?$
</IfModule>

# Disable Directory Listing
Options -Indexes

# Cache static assets
<IfModule mod_headers.c>
    <FilesMatch "\.(html|htm|js|css|json|xml|txt|png|jpe?g|gif|svg|ico|woff2?|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>
